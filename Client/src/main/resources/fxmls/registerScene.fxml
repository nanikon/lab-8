<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400" minWidth="400" xmlns="http://javafx.com/javafx/8.0.281" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nanikon.FlatCollection.scenceControllers.registerScene">
    <children>
        <HBox>
            <children>
                <Button fx:id="back" mnemonicParsing="false" onAction="#goToStart" text="Back">
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" text="Register " textAlignment="CENTER" />
        <HBox alignment="BOTTOM_CENTER" spacing="10.0">
            <children>
                <Label fx:id="loginLabel" alignment="TOP_RIGHT" minWidth="-Infinity" prefHeight="17.0" text="Login" />
                <TextField fx:id="loginField" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label fx:id="passwordLabel" alignment="CENTER_RIGHT" minWidth="-Infinity" prefHeight="15.0" text="Password" />
                <PasswordField fx:id="passwordField" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Label fx:id="doublePasswordLabel" alignment="CENTER_RIGHT" text="Password again" textAlignment="RIGHT" />
            <PasswordField fx:id="doublePasswordField" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
        <Button fx:id="submit" mnemonicParsing="false" text="Submit" onAction="#registerApp"/>

    </children>
</VBox>
