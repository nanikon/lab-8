<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400" minWidth="400" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nanikon.FlatCollection.scenceControllers.logInScene">
   <children>
      <HBox>
         <children>
            <Button fx:id="back" mnemonicParsing="false" onAction="#goToStart" text="Back">
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" text="Log in" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="loginLabel" alignment="CENTER_RIGHT" text="Login" />
            <TextField fx:id="loginField" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="passwordLabel" alignment="CENTER_RIGHT" text="Password" />
            <PasswordField fx:id="passwordField" />
         </children>
         <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Button fx:id="submit" mnemonicParsing="false" onAction="#goToTable" text="Submit">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></Button>

   </children>
</VBox>
